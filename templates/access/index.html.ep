% layout 'wide';

<div class="row" ng-app="Access" ng-controller="Controll as ctrl">

  <div ng-if="ctrl.ready" class="col s4">
    <h2>Пользователи / сотрудники</h2>
    <users-list data-param="param"></users-list>
  </div>
  
  <div ng-if="ctrl.ready" class="col s4">
    <h2>Роли / должности</h2>
    <roles-list data-param="param"></roles-list>
  </div>
  
  <div ng-if="ctrl.ready" class="col s4">
    <h2>Функции / маршруты</h2>
  </div>

</div>