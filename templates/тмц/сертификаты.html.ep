% layout 'main';


<div ng-app="Серификаты ТМЦ"  ng-controller="Controll as ctrl" class="row">

<template>
<!-- слева список объектов -->
  <div class="col s4">
    <h2>
      <i class="material-icons fs18">place</i>
      <span>Объекты</span>
    </h2>
    <v-left-objects :p-data = " data " @select-object=" SelectObject "></v-left-objects>
  </div>
  
<!-- в центре рабочая область обработки списка закупок или отображения файлов для правого пункта дерева номенклатуры2 -->
  <div class="col s4">
    <v-center-zakup v-if=" selectedObject " :p-object=" selectedObject " @select-row=" SelectZakupRow "></v-center-zakup>
  </div>
  
<!-- справа стыковочное дерево номенклатуры2 -->
  <div class="col s4">
    <h2>
      <i class="material-icons fs20">folder_special</i>
      <span>Папки сертификатов</span>
    </h2>
    <v-right-folders :param="paramFolder"></v-right-folders>
  </div>

</template>

</div>